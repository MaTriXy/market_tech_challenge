<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <ImageView
      android:id="@+id/expandCollapseArrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:contentDescription="@null"
      android:src="@drawable/ic_arrow_right"
      app:layout_constraintBottom_toBottomOf="@+id/marketName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/marketName"
      />

  <TextView
      android:id="@+id/dateMonth"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingEnd="@dimen/spacing_small"
      android:paddingStart="@dimen/spacing_small"
      android:textSize="@dimen/font_normal"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@id/dateDay"
      app:layout_constraintStart_toStartOf="@id/dateDay"
      app:layout_constraintTop_toBottomOf="@+id/dateDay"
      tools:text="Ekim"
      />

  <TextView
      android:id="@+id/dateDay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingEnd="@dimen/spacing_small"
      android:paddingStart="@dimen/spacing_small"
      android:textSize="@dimen/font_huge"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="08"
      />

  <TextView
      android:id="@+id/marketName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/spacing_normal"
      android:paddingEnd="@dimen/spacing_small"
      android:paddingStart="@dimen/spacing_small"
      android:textSize="@dimen/font_normal"
      android:textStyle="bold"
      app:layout_constraintEnd_toStartOf="@+id/expandCollapseArrow"
      app:layout_constraintStart_toEndOf="@id/separator"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Market Name 1"
      />

  <TextView
      android:id="@+id/orderName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/spacing_tiny"
      android:ellipsize="end"
      android:maxLines="1"
      android:paddingEnd="@dimen/spacing_small"
      android:paddingStart="@dimen/spacing_small"
      app:layout_constraintEnd_toStartOf="@id/price"
      app:layout_constraintStart_toStartOf="@id/marketName"
      app:layout_constraintBottom_toBottomOf="@id/price"
      app:layout_constraintTop_toBottomOf="@id/marketName"
      tools:text="Åžampuan 250 ml"
      />

  <TextView
      android:id="@+id/price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/spacing_normal"
      android:paddingEnd="@dimen/spacing_small"
      android:paddingStart="@dimen/spacing_small"
      android:textSize="@dimen/font_normal"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@id/orderName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/orderName"
      tools:text="25 TL"
      />

  <View
      android:id="@+id/separator"
      android:layout_width="1dp"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/spacing_normal"
      android:background="@color/orders_separator_color"
      app:layout_constraintBottom_toBottomOf="@+id/dateMonth"
      app:layout_constraintStart_toEndOf="@id/dateDay"
      app:layout_constraintTop_toTopOf="@id/dateDay"
      />


</androidx.constraintlayout.widget.ConstraintLayout>